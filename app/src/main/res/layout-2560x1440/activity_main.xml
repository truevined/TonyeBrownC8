                android:layout_marginLeft="6dp"
                android:layout_marginRight="6dp"
                android:height="48dp"
                android:layout_weight="1"
                android:contentDescription="@string/four" />

            <ImageButton
                android:layout_width="102dp"
                android:layout_height="wrap_content"
                android:id="@+id/buttonFive"
                android:layout_gravity="center_vertical"
                android:background="@drawable/calc8darkmockup_138"
                android:alpha="1"
                android:width="99dp"
                android:layout_marginLeft="6dp"
                android:layout_marginRight="6dp"
                android:height="48dp"
                android:layout_weight="1"
                android:contentDescription="@string/five" />

            <ImageButton
                android:layout_width="102dp"
                android:layout_height="wrap_content"
                android:id="@+id/buttonSix"
                android:background="@drawable/calc8darkmockup_140"
                android:alpha="1"
                android:width="99dp"
                android:layout_marginLeft="6dp"
                android:layout_marginRight="6dp"
                android:height="48dp"
                android:layout_weight="1"
                android:layout_gravity="center_vertical"
                android:contentDescription="@string/six" />

            <ImageButton
                android:layout_width="102dp"
                android:layout_height="wrap_content"
                android:id="@+id/buttonDel"
                android:background="@drawable/calc8darkmockup_142"
                android:alpha="1"
                android:width="99dp"
                android:layout_marginLeft="6dp"
                android:layout_marginRight="6dp"
                android:height="48dp"
                android:layout_weight="1"
                android:layout_gravity="center_vertical"
                android:contentDescription="@string/DEL" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:id="@+id/LinearLayoutBasRow3"
            android:layout_weight="1"
            android:layout_marginBottom="3dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:id="@+id/LinearLayout2Rows"
                android:orientation="vertical"
                android:layout_weight="0.82">

