                android:width="99dp"
                android:layout_marginLeft="6dp"
                android:layout_marginRight="6dp"
                android:height="48dp"
                android:layout_weight="1"
                android:contentDescription="@string/leftBracket" />

            <ImageButton
                android:layout_width="102dp"
                android:layout_height="fill_parent"
                android:id="@+id/buttonRightBracket"
                android:background="@drawable/calc8darkmockup_85"
                android:alpha="1"
                android:width="99dp"
                android:layout_marginLeft="6dp"
                android:layout_marginRight="6dp"
                android:height="48dp"
                android:layout_weight="1"
                android:layout_gravity="center_vertical"
                android:contentDescription="@string/rightBracket" />

            <ImageButton
                android:layout_width="102dp"
                android:layout_height="fill_parent"
                android:id="@+id/buttonMR"
                android:background="@drawable/calc8darkmockup_87"
                android:alpha="1"
                android:width="99dp"
                android:layout_marginLeft="6dp"
                android:layout_marginRight="6dp"
                android:height="48dp"
                android:layout_weight="1"
                android:layout_gravity="center_vertical"
                android:contentDescription="@string/memoryR" />
        </LinearLayout>
    </LinearLayout>

    <ProgressBar
        android:id="@+id/progressBar1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:layout_weight="0.02"
        android:layout_marginTop="12dp"
        android:visibility="visible"
        style="?android:attr/progressBarStyleHorizontal"
        android:progressTint="#fd8e01"
        android:background="#212121" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.56"
        android:id="@+id/LinearLayoutBasic"
        android:clickable="false"
        android:layout_marginBottom="10dp">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:id="@+id/LinearLayoutBasRow1"
            android:layout_marginTop="10dp"
            android:layout_weight="0.42">

            <ImageButton
                android:layout_width="102dp"
                android:layout_height="wrap_content"
                android:id="@+id/buttonMultiply"
                android:layout_gravity="center_vertical"
                android:background="@drawable/calc8darkmockup_112"
                android:width="99dp"
                android:layout_marginLeft="6dp"
                android:layout_marginRight="6dp"
                android:height="48dp"
                android:layout_weight="1"
                android:alpha="1"
                android:contentDescription="@string/multiply" />

            <ImageButton
                android:layout_width="102dp"
                android:layout_height="wrap_content"
                android:id="@+id/buttonSeven"
                android:layout_gravity="center_vertical"
                android:background="@drawable/calc8darkmockup_114"
                android:alpha="1"
                android:width="99dp"
                android:layout_marginLeft="6dp"
                android:layout_marginRight="6dp"
                android:height="48dp"
                android:layout_weight="1"
                android:contentDescription="@string/seven" />

            <ImageButton
                android:layout_width="102dp"
                android:layout_height="wrap_content"
                android:id="@+id/buttonEight"
                android:layout_gravity="center_vertical"
                android:background="@drawable/calc8darkmockup_116"
                android:alpha="1"
                android:width="99dp"
                android:layout_marginLeft="6dp"
                android:layout_marginRight="6dp"
                android:height="48dp"
                android:layout_weight="1"
                android:contentDescription="@string/eight" />

            <ImageButton
                android:layout_width="102dp"
                android:layout_height="wrap_content"
                android:id="@+id/buttonNine"
                android:background="@drawable/calc8darkmockup_118"
                android:alpha="1"
                android:width="99dp"
                android:layout_marginLeft="6dp"
                android:layout_marginRight="6dp"
                android:height="48dp"
                android:layout_weight="1"
                android:layout_gravity="center_vertical"
                android:contentDescription="@string/nine" />

            <ImageButton
                android:layout_width="102dp"
                android:layout_height="wrap_content"
                android:id="@+id/buttonCLR"
                android:background="@drawable/calc8darkmockup_120"
                android:alpha="1"
                android:width="99dp"
                android:layout_marginLeft="6dp"
                android:layout_marginRight="6dp"
                android:height="48dp"
                android:layout_weight="1"
                android:layout_gravity="center_vertical"
                android:contentDescription="@string/CLR" />
        </LinearLayout>

        <LinearLayout
