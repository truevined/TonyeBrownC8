<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="fill_parent"
    android:layout_height="fill_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context="tonyebrown.calc8.MainActivity"
    android:background="@drawable/calc8dark_bg"
    android:orientation="vertical"
    android:id="@+id/LinearLayoutAll"
    android:weightSum="1"
    android:gravity="center">

    <TextView
        android:layout_width="248dp"
        android:layout_height="0dp"
        android:id="@+id/textViewHistory"
        android:layout_gravity="center_horizontal|right"
        android:layout_marginRight="7dp"
        android:width="305dp"
        android:textSize="12sp"
        android:textColor="#ffbb1f"
        android:padding="3dp"
        android:text="@string/history"
        android:gravity="end"
        android:layout_weight="0.05"
        android:layout_marginTop="8dp" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="26dp"
        android:id="@+id/LinearLayoutLCD"
        android:layout_weight="0.02">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:id="@+id/textViewLCD"
            android:width="550dp"
            android:textSize="56sp"
            android:layout_gravity="center"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:hint="@string/LCD"
            android:textColorHint="#eb184118"
            android:singleLine="true"
            android:textColor="#eb184118"
            android:ellipsize="none"
            android:textIsSelectable="false"
            android:focusableInTouchMode="true"
            android:focusable="true"
            android:enabled="true"
            android:contextClickable="false"
            android:clickable="false"
            android:gravity="center_vertical|end"
            android:editable="false"
            android:layout_marginTop="10dp" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:id="@+id/LinearLayoutActiveFns"
            android:gravity="center_vertical"
            android:layout_weight="0.30"
            android:layout_marginTop="4dp">

            <TextView
                android:layout_width="97dp"
                android:layout_height="wrap_content"
                android:id="@+id/textViewActiveFn1"
                android:width="97dp"
                android:padding="3dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="7dp"
                android:layout_weight="1"
                android:textSize="11sp"
                android:gravity="center"
                android:textColor="#5c8c3a"
                android:text="@string/activeFn1"
                android:alpha=".2" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textViewActiveFn2"
                android:width="97dp"
                android:padding="3dp"
                android:layout_marginLeft="9dp"
                android:layout_marginRight="7dp"
                android:layout_weight="1"
                android:textSize="11sp"
                android:gravity="center"
                android:text="@string/activeFn2"
                android:textColor="#5c8c3a"
                android:alpha=".2" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textViewActiveFn3"
                android:width="97dp"
                android:padding="3dp"
                android:layout_marginLeft="9dp"
                android:layout_marginRight="7dp"
                android:layout_weight="1"
                android:textSize="11sp"
                android:gravity="center"
                android:text="@string/activeFn3"
                android:textColor="#5c8c3a"
                android:alpha=".2" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textViewActiveFn4"
                android:width="97dp"
                android:padding="3dp"
                android:layout_marginLeft="9dp"
                android:layout_marginRight="7dp"
                android:layout_weight="1"
                android:textSize="11sp"
                android:gravity="center"
                android:text="@string/activeFn4"
                android:textColor="#5c8c3a"
                android:alpha=".2" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textViewActiveFn5"
                android:width="97dp"
                android:padding="3dp"
                android:layout_marginLeft="9dp"
                android:layout_marginRight="8dp"
                android:layout_weight="1"
                android:textSize="11sp"
                android:gravity="center"
                android:text="@string/activeFn5"
                android:textColor="#ab2d26"
                android:alpha=".1" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
