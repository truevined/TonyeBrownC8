                android:width="99dp"
                android:layout_marginLeft="6dp"
                android:layout_marginRight="6dp"
                android:height="48dp"
                android:layout_weight="1"
                android:layout_gravity="center_vertical"
                android:contentDescription="@string/memoryPlus" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="28dp"
            android:gravity="fill_horizontal|fill_vertical|center_horizontal"
            android:id="@+id/LinearLayoutSciRow3"
            android:layout_marginTop="26dp">

            <ImageButton
                android:layout_width="102dp"
                android:layout_height="fill_parent"
                android:id="@+id/buttonXSquared"
                android:layout_gravity="center_vertical"
                android:background="@drawable/calc8darkmockup_79"
                android:width="99dp"
                android:layout_marginLeft="6dp"
                android:layout_marginRight="6dp"
                android:height="48dp"
                android:layout_weight="1"
                android:alpha="1"
                android:contentDescription="@string/xSquared" />

            <ImageButton
                android:layout_width="102dp"
                android:layout_height="fill_parent"
                android:id="@+id/buttonSquareRoot"
                android:layout_gravity="center_vertical"
                android:background="@drawable/calc8darkmockup_81"
                android:alpha="1"
                android:width="99dp"
                android:layout_marginLeft="6dp"
                android:layout_marginRight="6dp"
                android:height="48dp"
                android:layout_weight="1"
                android:contentDescription="@string/squareRoot" />

            <ImageButton
                android:layout_width="102dp"
                android:layout_height="fill_parent"
                android:id="@+id/buttonLeftBracket"
