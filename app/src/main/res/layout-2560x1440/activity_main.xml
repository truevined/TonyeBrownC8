                android:width="99dp"
                android:layout_marginLeft="6dp"
                android:layout_marginRight="6dp"
                android:height="48dp"
                android:layout_weight="1"
                android:alpha="1"
                android:contentDescription="@string/shift" />

            <ImageButton
                android:layout_width="102dp"
                android:layout_height="fill_parent"
                android:id="@+id/buttonDeg"
                android:layout_gravity="center_vertical"
                android:background="@drawable/calc8darkmockup_37"
                android:alpha="1"
                android:width="99dp"
                android:layout_marginLeft="6dp"
                android:layout_marginRight="6dp"
                android:height="48dp"
                android:layout_weight="1"
                android:contentDescription="@string/degree" />

            <ImageButton
                android:layout_width="102dp"
                android:layout_height="fill_parent"
