                android:alpha="1"
                android:width="99dp"
                android:layout_marginLeft="6dp"
                android:layout_marginRight="6dp"
                android:height="48dp"
                android:layout_weight="1"
                android:contentDescription="@string/radian" />

            <ImageButton
                android:layout_width="102dp"
                android:layout_height="fill_parent"
                android:id="@+id/buttonPi"
                android:background="@drawable/calc8darkmockup_41"
                android:alpha="1"
                android:width="99dp"
                android:layout_marginLeft="6dp"
                android:layout_marginRight="6dp"
                android:height="48dp"
                android:layout_weight="1"
                android:layout_gravity="center_vertical"
                android:contentDescription="@string/pi" />

            <ImageButton
                android:layout_width="102dp"
                android:layout_height="fill_parent"
                android:id="@+id/buttonRand"
                android:background="@drawable/calc8darkmockup_43"
                android:alpha="1"
                android:width="99dp"
                android:layout_marginLeft="6dp"
                android:layout_marginRight="6dp"
                android:height="48dp"
                android:layout_weight="1"
                android:layout_gravity="center_vertical"
                android:contentDescription="@string/random" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="28dp"
            android:gravity="fill_horizontal|fill_vertical|center_horizontal"
            android:id="@+id/LinearLayoutSciRow2"
            android:layout_marginTop="32dp">

            <ImageButton
                android:layout_width="102dp"
                android:layout_height="fill_parent"
                android:id="@+id/buttonSin"
                android:layout_gravity="center_vertical"
                android:background="@drawable/calc8darkmockup_57"
                android:width="99dp"
                android:layout_marginLeft="6dp"
                android:layout_marginRight="6dp"
                android:height="48dp"
                android:layout_weight="1"
                android:alpha="1"
                android:contentDescription="@string/sin" />

            <ImageButton
                android:layout_width="102dp"
                android:layout_height="fill_parent"
                android:id="@+id/buttonCos"
                android:layout_gravity="center_vertical"
                android:background="@drawable/calc8darkmockup_59"
                android:alpha="1"
                android:width="99dp"
                android:layout_marginLeft="6dp"
                android:layout_marginRight="6dp"
                android:height="48dp"
                android:layout_weight="1"
                android:contentDescription="@string/cos" />

            <ImageButton
                android:layout_width="102dp"
                android:layout_height="fill_parent"
